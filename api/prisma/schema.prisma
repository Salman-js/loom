generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["app"]
}

model Book {
  id        String   @id @default(uuid())
  title     String
  userId    String   @map("user_id")
  coverId   String   @unique
  epubId    String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  cover     Cover    @relation("cover", fields: [coverId], references: [id])
  epub      Epub     @relation("epub", fields: [epubId], references: [id])
  shelves   Shelf[]  @relation("shelved_books")

  @@map("books")
  @@schema("app")
}

model Epub {
  id       String  @id @default(uuid())
  fileName String
  filePath String
  fileSize String?
  mimeType String?
  book     Book?   @relation("epub")

  @@map("epubs")
  @@schema("app")
}

model Cover {
  id       String  @id @default(uuid())
  fileName String  @map("file_name")
  filePath String  @map("file_path")
  fileSize String? @map("file_size")
  mimeType String? @map("mime_type")
  book     Book?   @relation("cover")

  @@map("images")
  @@schema("app")
}

model Shelf {
  id        String   @id @default(uuid())
  name      String   @map("shelf_name")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  books     Book[]   @relation("shelved_books")

  @@index([name, userId])
  @@map("shelves")
  @@schema("app")
}
